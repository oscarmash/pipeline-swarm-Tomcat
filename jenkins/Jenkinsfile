pipeline {
    agent {label 'swarm-devops'}

    stages {
        stage('Prepare') {
            steps {
		echo 'Verificar git..'
		checkout scm
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
		echo "BUILD NUMBER: ${env.BUILD_NUMBER}"
		sh "hostname"
		sh "pwd"
		sh "ls -la"
		sh "cd docker"
		sh "source env-swarm-manager.sh"
		sh "docker info"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
